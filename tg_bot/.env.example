# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# ========================================
# REQUIRED SETTINGS
# ========================================

# Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram User IDs of administrators (JSON array format)
# Get your ID from @userinfobot
ADMIN_IDS=[123456789,987654321]

# ========================================
# OPTIONAL SETTINGS
# ========================================

# Proxy for Telegram API (optional)
# Format: socks5://user:pass@host:port or http://host:port
# TELEGRAM_PROXY_URL=socks5://proxy.example.com:1080

# ========================================
# PARSING SETTINGS
# ========================================

# Global daily limit for all users (default: 10000)
GLOBAL_DAILY_LIMIT=10000

# Per-user daily limit (default: 500)
PER_USER_DAILY_LIMIT=500

# Poll interval for status checks in seconds (default: 1.0)
POLL_INTERVAL_SECONDS=1.0

# Request timeout in seconds (default: 10.0)
REQUEST_TIMEOUT_SECONDS=10.0

# Default mode: links or download (default: links)
# Note: download mode currently works same as links
DEFAULT_MODE=links

# ========================================
# LOGGING
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# ========================================
# FILES
# ========================================

# Directory for temporary files (default: files)
FILES_DIR=files

# ========================================
# DEPRECATED (not used in local mode)
# ========================================

# Backend URL - not used in local parsing mode
# BACKEND_BASE_URL=https://parskad.ru
